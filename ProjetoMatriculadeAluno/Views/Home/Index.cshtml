@{
    ViewData["Title"] = "Plataforma EAD - Matrículas";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row bg-primary text-white py-5 mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">📚 Plataforma EAD</h1>
            <p class="lead">Sistema de Gerenciamento de Matrículas de Alunos e Cursos</p>
        </div>
    </div>

    <!-- Cards de Navegação -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Gerenciar Alunos</h5>
                    <p class="card-text text-muted">Cadastre, edite e visualize informações dos alunos da plataforma.</p>
                    <a href="@Url.Action("Index", "Aluno")" class="btn btn-primary btn-lg">Acessar Alunos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-book fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Gerenciar Cursos</h5>
                    <p class="card-text text-muted">Administre cursos, preços, carga horária e descrições.</p>
                    <a href="@Url.Action("Index", "Curso")" class="btn btn-success btn-lg">Acessar Cursos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-graduation-cap fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Matrículas</h5>
                    <p class="card-text text-muted">Gerencie as matrículas dos alunos nos cursos disponíveis.</p>
                    <a href="@Url.Action("Index", "Matricula")" class="btn btn-warning btn-lg">Ver Matrículas</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Estatísticas (opcional) -->
    <div class="row bg-light py-4 rounded mb-4">
        <div class="col-md-4 text-center">
            <h3 class="text-primary">📊</h3>
            <h4>Estatísticas</h4>
            <p class="text-muted">Acompanhe o crescimento da plataforma</p>
        </div>
        <div class="col-md-4 text-center">
            <h3 class="text-success">🎯</h3>
            <h4>Objetivos</h4>
            <p class="text-muted">Facilitar o gerenciamento educacional</p>
        </div>
        <div class="col-md-4 text-center">
            <h3 class="text-info">🚀</h3>
            <h4>Inovação</h4>
            <p class="text-muted">Tecnologia aplicada à educação</p>
        </div>
    </div>
</div>

<!-- Seção Scripts para Font Awesome -->
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .btn {
        transition: all 0.2s ease-in-out;
    }
</style>
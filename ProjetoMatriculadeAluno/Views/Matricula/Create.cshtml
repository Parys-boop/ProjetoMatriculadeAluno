@model MatriculaCreateViewModel
@{
    ViewData["Title"] = "Nova Matrícula";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap"></i> Nova Matrícula
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AlunoId" class="form-label">
                                    <i class="fas fa-user"></i> Aluno *
                                </label>
                                <select asp-for="AlunoId" class="form-select" asp-items="ViewBag.AlunoId">
                                    <option value="">Selecione um aluno</option>
                                </select>
                                <span asp-validation-for="AlunoId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CursoId" class="form-label">
                                    <i class="fas fa-book"></i> Curso *
                                </label>
                                <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId">
                                    <option value="">Selecione um curso</option>
                                </select>
                                <span asp-validation-for="CursoId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PrecoPago" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Preço Pago *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="PrecoPago" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                                <span asp-validation-for="PrecoPago" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Status" class="form-label">
                                    <i class="fas fa-flag"></i> Status *
                                </label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StatusMatricula>()">
                                    <option value="">Selecione o status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Progresso" class="form-label">
                                    <i class="fas fa-percent"></i> Progresso *
                                </label>
                                <div class="input-group">
                                    <input asp-for="Progresso" type="number" min="0" max="100" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="Progresso" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NotaFinal" class="form-label">
                                    <i class="fas fa-star"></i> Nota Final (0-10)
                                </label>
                                <input asp-for="NotaFinal" type="number" min="0" max="10" step="0.1" class="form-control" />
                                <span asp-validation-for="NotaFinal" class="text-danger"></span>
                            </div>
                        </div>

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Salvar Matrícula
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
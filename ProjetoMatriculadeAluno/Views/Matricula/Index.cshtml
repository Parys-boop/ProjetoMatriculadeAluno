@model IEnumerable<Matricula>
@{
    ViewData["Title"] = "Matrículas";
}

<div class="container mt-4">
    <h2 class="mb-3">Matrículas</h2>
    <form method="get" class="input-group mb-3">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por aluno ou curso..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
        <a href="@Url.Action("Create")" class="btn btn-success ms-2">Nova Matrícula</a>
    </form>
    @if (TempData["Alert"] != null)
    {
        <div class="alert alert-info">@TempData["Alert"]</div>
    }
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Aluno</th>
                <th>Curso</th>
                <th>Data</th>
                <th>Status</th>
                <th>Progresso</th>
                <th>Preço Pago</th>
                <th>Nota Final</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var matricula in Model)
            {
                <tr>
                    <td>@matricula.Aluno?.Nome</td>
                    <td>@matricula.Curso?.Titulo</td>
                    <td>@matricula.Data.ToString("dd/MM/yyyy")</td>
                    <td>
                        @switch (matricula.Status)
                        {
                            case StatusMatricula.Ativo:
                                <span class="badge bg-success">Ativo</span>
                                break;
                            case StatusMatricula.Concluido:
                                <span class="badge bg-primary">Concluído</span>
                                break;
                            case StatusMatricula.Cancelado:
                                <span class="badge bg-danger">Cancelado</span>
                                break;
                        }
                    </td>
                    <td>@matricula.Progresso%</td>
                    <td>@matricula.PrecoPago.ToString("C")</td>
                    <td>
                        @if (matricula.NotaFinal.HasValue)
                        {
                            @matricula.NotaFinal.Value
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { alunoId = matricula.AlunoId, cursoId = matricula.CursoId })" class="btn btn-sm btn-warning">Editar</a>
                        <a href="@Url.Action("Details", new { alunoId = matricula.AlunoId, cursoId = matricula.CursoId })" class="btn btn-sm btn-info">Detalhes</a>
                        <a href="@Url.Action("Delete", new { alunoId = matricula.AlunoId, cursoId = matricula.CursoId })" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model MatriculaEditViewModel
@{
    ViewData["Title"] = "Editar Matrícula";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Editar Matrícula
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="AlunoId" />
                        <input type="hidden" asp-for="CursoId" />
                        <input type="hidden" asp-for="Data" />

                        <!-- Informações do Aluno e Curso (apenas leitura) -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user"></i> Aluno:
                                </label>
                                <p class="form-control-plaintext bg-light p-2 rounded">@Model.AlunoNome</p>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-book"></i> Curso:
                                </label>
                                <p class="form-control-plaintext bg-light p-2 rounded">@Model.CursoTitulo</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PrecoPago" class="form-label">
                                    <i class="fas fa-dollar-sign"></i> Preço Pago *
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="PrecoPago" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                                <span asp-validation-for="PrecoPago" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Status" class="form-label">
                                    <i class="fas fa-flag"></i> Status *
                                </label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<StatusMatricula>()">
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Progresso" class="form-label">
                                    <i class="fas fa-percent"></i> Progresso *
                                </label>
                                <div class="input-group">
                                    <input asp-for="Progresso" type="number" min="0" max="100" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="Progresso" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NotaFinal" class="form-label">
                                    <i class="fas fa-star"></i> Nota Final (0-10)
                                </label>
                                <input asp-for="NotaFinal" type="number" min="0" max="10" class="form-control" />
                                <span asp-validation-for="NotaFinal" class="text-danger"></span>
                            </div>
                        </div>

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="fas fa-save"></i> Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
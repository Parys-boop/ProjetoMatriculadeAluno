@model IEnumerable<Aluno>
@{
    ViewData["Title"] = "Alunos";
}

<div class="container mt-4">
    <h2 class="mb-3">Alunos</h2>
    <form method="get" class="input-group mb-3">
        <input type="text" name="busca" class="form-control" placeholder="Buscar por nome ou email..." />
        <button class="btn btn-primary" type="submit">Buscar</button>
        <a href="@Url.Action("Create")" class="btn btn-success ms-2">Novo Aluno</a>
    </form>
    @if (TempData["Alert"] != null)
    {
        <div class="alert alert-info">@TempData["Alert"]</div>
    }
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td>@aluno.Nome</td>
                    <td>@aluno.Email</td>
                    <td>@aluno.Telefone</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = aluno.Id })" class="btn btn-sm btn-warning">Editar</a>
                        <a href="@Url.Action("Details", new { id = aluno.Id })" class="btn btn-sm btn-info">Detalhes</a>
                        <a href="@Url.Action("Delete", new { id = aluno.Id })" class="btn btn-sm btn-danger">Excluir</a>
                        <a href="@Url.Action("PorAluno", "Matricula", new { alunoId = aluno.Id })" class="btn btn-sm btn-secondary">Matrículas</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
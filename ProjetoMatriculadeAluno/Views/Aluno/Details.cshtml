@model Aluno
@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<div class="container mt-4">
    <h2 class="mb-3">Detalhes do Aluno</h2>
    <div class="card p-4 shadow-sm" style="max-width: 500px;">
        <dl class="row">
            <dt class="col-sm-4">Nome:</dt>
            <dd class="col-sm-8">@Model.Nome</dd>

            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Telefone:</dt>
            <dd class="col-sm-8">@Model.Telefone</dd>
        </dl>

        @if (Model.Matriculas != null && Model.Matriculas.Any())
        {
            <h4 class="mt-3">Matrículas:</h4>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Curso</th>
                        <th>Status</th>
                        <th>Progresso</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var matricula in Model.Matriculas)
                    {
                        <tr>
                            <td>@matricula.Curso?.Titulo</td>
                            <td>@matricula.Status</td>
                            <td>@matricula.Progresso%</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="mt-3">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>
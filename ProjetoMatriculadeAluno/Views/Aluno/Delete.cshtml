@model Aluno
@{
    ViewData["Title"] = "Excluir Aluno";
}

<div class="container mt-4">
    <h2 class="mb-3">Excluir Aluno</h2>
    <div class="alert alert-warning">
        <strong>Atenção!</strong> Você tem certeza que deseja excluir este aluno?
    </div>

    <div class="card p-4 shadow-sm" style="max-width: 500px;">
        <dl class="row">
            <dt class="col-sm-4">Nome:</dt>
            <dd class="col-sm-8">@Model.Nome</dd>

            <dt class="col-sm-4">Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Telefone:</dt>
            <dd class="col-sm-8">@Model.Telefone</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>